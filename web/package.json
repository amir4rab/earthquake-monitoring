    "next-seo": "^5.4.0",
    "next-translate": "^1.5.0",
    "qrcode.react": "^3.1.0",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-icons": "^4.3.1",
    "react-leaflet": "^4.0.1",
    "redis": "^4.2.0",
    "stylis": "^4.1.1",
    "stylis-plugin-rtl": "^2.1.1",
    "swr": "^1.3.0"
