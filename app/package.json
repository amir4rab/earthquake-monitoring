{
  "name": "earthquake-monitoring-app",
  "private": true,
  "version": "1.1.0",
  "author": {
    "name": "Amir Arab",
    "email": "contact@amir4rab.com",
    "url": "http://amir4rab.com/"
  },
  "description": "Displaying the latest earthquake events in Iran.",
  "homepage": "https://earthquake-monitoring.amir4rab.com",
  "projectUrl": "https://github.com/amir4rab/earthquake-monitoring",
  "repository": "https://github.com/amir4rab/earthquake-monitoring",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prisma-types": "rm -r -f ./prisma && cp ../prisma . -r && npx prisma generate && rm -r -f ./prisma",
    "leaflet-assets": " cp ./assets/* ./dist",
    "pwa-dev": "cross-env VITE_PWA_BUILD=1 npm run dev",
    "pwa-build": "npm run prisma-types && cross-env VITE_PWA_BUILD=1 npm run build && npm run leaflet-assets",
    "pwa-build-docker": "npx prisma generate && cross-env VITE_PWA_BUILD=1 npm run build && npm run leaflet-assets",
    "android-dev": "cross-env VITE_ANDROID_BUILD=1 vite",
    "android-build": "cross-env VITE_ANDROID_BUILD=1 npm run build && npm run leaflet-assets && npx cap copy && npx cap sync android && npm run generate-assets",
    "generate-assets": "npx cordova-res android --skip-config --copy --icon-background-source '#141517' --type=adaptive-icon && npx cap sync android"
  },
  "dependencies": {
    "@capacitor/android": "^4.0.1",
    "@capacitor/app": "^4.0.1",
    "@capacitor/core": "^4.0.1",
    "@emotion/cache": "^11.10.0",
    "@emotion/react": "^11.10.0",
    "@emotion/server": "^11.10.0",
    "@mantine/core": "^5.1.5",
    "@mantine/hooks": "^5.1.5",
    "@mantine/modals": "^5.1.5",
    "@mantine/next": "^5.1.5",
    "@mantine/nprogress": "^5.1.5",
    "@mantine/prism": "^5.1.5",
    "@mantine/spotlight": "^5.1.5",
    "@mantine/ssr": "^5.1.5",
    "@mantine/styles": "^5.1.5",
    "@prisma/client": "^4.1.1",
    "framer-motion": "^7.0.1",
    "geolib": "^3.3.3",
    "i18next": "^21.8.14",
    "i18next-browser-languagedetector": "^6.1.4",
    "leaflet": "^1.8.0",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^11.18.1",
    "react-icons": "^4.4.0",
    "react-leaflet": "^4.0.1",
    "react-router-dom": "6",
    "stylis": "^4.1.1",
    "stylis-plugin-rtl": "^2.1.1",
    "swr": "^1.3.0",
    "ua-parser-js": "^1.0.2",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^4.0.1",
    "@types/leaflet": "^1.7.11",
    "@types/node": "^18.6.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/ua-parser-js": "^0.7.36",
    "@vitejs/plugin-legacy": "^2.0.0",
    "@vitejs/plugin-react": "^2.0.0",
    "cordova-res": "^0.15.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.21.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.30.1",
    "prisma": "^4.1.1",
    "typescript": "^4.6.4",
    "vite": "^3.0.0",
    "vite-plugin-pwa": "^0.12.3"
  }
}
