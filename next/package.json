{
  "name": "next-mantine",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "docker-build": "cross-env IS_DOCKER_BUILD=true next build",
    "start": "next start",
    "lint": "next lint",
    "init-prisma-schema": "rm -r -f ./prisma && cp ../prisma . -r",
    "prisma-migrate-dev": "npx prisma migrate dev --schema=../prisma/schema.prisma --skip-generate",
    "prisma-migrate-prod": "npx prisma migrate deploy --schema=../prisma/schema.prisma --skip-generate",
    "prisma-seed": "npx prisma db seed",
    "prisma-studio": "npx prisma studio",
    "prisma-generate": "npx prisma generate",
    "docker-prisma-migrate-dev": "npx prisma migrate dev",
    "docker-prisma-migrate-prod": "npx prisma migrate deploy",
    "docker-prisma-seed": "npx prisma db docker-seed",
    "docker-prisma-studio": "npx prisma studio",
    "docker-prisma-generate": "npx prisma generate",
    "docker-start": "npm-run-all docker-prisma-migrate-prod docker-prisma-seed build start"
  },
  "dependencies": {
    "@mantine/core": "^4.2.12",
    "@mantine/hooks": "^4.2.12",
    "@mantine/next": "^4.2.12",
    "@mantine/ssr": "^4.2.12",
    "@next/bundle-analyzer": "^12.1.5",
    "@prisma/client": "^4.1.0",
    "next": "12.2.3",
    "next-compose-plugins": "^2.2.1",
    "next-seo": "^5.4.0",
    "next-translate": "^1.5.0",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-icons": "^4.3.1",
    "stylis": "^4.1.1",
    "stylis-plugin-rtl": "^2.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@types/node": "17.0.26",
    "@types/react": "18.0.6",
    "@types/react-dom": "18.0.2",
    "cross-env": "^7.0.3",
    "eslint": "8.14.0",
    "eslint-config-next": "12.1.5",
    "jest": "^28.0.0",
    "prisma": "^4.1.0",
    "sass": "^1.50.1",
    "typescript": "4.6.3"
  }
}
