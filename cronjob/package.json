{
  "name": "cronjob",
  "author": "Amir Arab",
  "version": "1.0.5",
  "module": "CommonJS",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "build": "tsc -p .",
    "init-prisma-schema": "rm -r -f ./prisma && cp ../prisma . -r",
    "prisma-migrate-dev": "npx prisma migrate dev --schema=../prisma/schema.prisma --skip-generate",
    "prisma-migrate-prod": "npx prisma migrate deploy --schema=../prisma/schema.prisma --skip-generate",
    "prisma-studio": "npx prisma studio",
    "prisma-generate": "npx prisma generate",
    "docker-prisma-migrate-prod": "npx prisma migrate deploy",
    "docker-prisma-generate": "npx prisma generate",
    "docker-start": "cross-env NODE_ENV=production && npm run docker-prisma-migrate-prod && npm run build && npm run start"
  },
  "dependencies": {
    "@prisma/client": "^4.1.0",
    "dotenv": "^16.0.1",
    "fast-xml-parser": "^4.0.9",
    "node-fetch": "^3.2.10",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.6",
    "@types/uuid": "^8.3.4",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.19",
    "prisma": "^4.1.0",
    "typescript": "^4.7.4"
  }
}
